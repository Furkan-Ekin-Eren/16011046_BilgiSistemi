<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back"
    android:orientation="vertical"
    android:padding="20dp">


    <ImageView
        android:id="@+id/kullanıcıFoto"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/no_image"
        android:layout_gravity="center"/>


    <TextView
        android:id="@+id/adT"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shapeemail"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/soyadT"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shapeemail"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/telNoT"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shapeemail"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/EmailT"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shapeemail"
        android:inputType="textEmailAddress"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/kimliknoT"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shapeemail"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/dersler"
            android:onClick="Tikla2"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shapelogin"
            android:padding="15dp"
            android:shadowColor="@android:color/transparent"
            android:text="Derslerim"
            android:textColor="@color/white"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/mailAt"
            android:layout_width="131dp"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content"
            android:onClick="sendMail"
            app:srcCompat="@android:drawable/ic_dialog_email"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/Ara"
            android:layout_width="131dp"
            android:layout_marginLeft="25dp"
            android:onClick="aramaYap"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_call"
            />

    </LinearLayout>




</LinearLayout>